<!DOCTYPE html>
<!-- Created By CodingNepal -->
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title>Forgot Password</title>
      <link rel="stylesheet" href="css/login.css">
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
      <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
   </head>
   <body>
      <div class="bg-img">
         <div class="content forgotPasswordContent">
            <a href="/" class="backToHome">
               <span class="material-symbols-outlined">
               arrow_back
               </span>
               <span>Go Back to Home</span>
            </a>
            <header>Reset Password?</header>
            <form action="/login">
                <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input type="password" class="pass-key" required placeholder="New Password">
                    <span class="show"></span>
                 </div>
                 <div class="field space">
                    <span class="fa fa-lock"></span>
                    <input type="password" class="pass-key" required placeholder="Confirm New Password">
                    <span class="show"></span>
                 </div>
               <div class="field space">
                  <input type="submit" value="Reset Password">
               </div>
            </form>
            <div class="login">
            </div>
            <div class="signup">
               <a href="/login">Go back to login</a>
            </div>
         </div>
      </div>

      <script>
         const pass_field = document.querySelector('.pass-key');
         const showBtn = document.querySelector('.show');
         showBtn.addEventListener('click', function(){
          if(pass_field.type === "password"){
            pass_field.type = "text";
            showBtn.textContent = "HIDE";
            showBtn.style.color = "#3498db";
          }else{
            pass_field.type = "password";
            // showBtn.textContent = "SHOW";
            showBtn.style.color = "#222";
          }
         });
      </script>
   </body>
</html>